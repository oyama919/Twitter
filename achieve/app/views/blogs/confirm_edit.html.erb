<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <h4>この内容で修正する</h4>
  
  <%= form_for(@blog, url: blog_path(@blog.id),method: :patch) do |f| %>
    <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
    <%= f.hidden_field :content %>
  
    <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
    <p>ツイート</p>:<%= @blog.content %></p>
    <%= f.submit "保存する" %>
  <% end %>
  <div class="conf">
  <%= form_for(@blog, url: edit_blog_path(@blog.id), method: 'get') do |f| %>
    <%= f.hidden_field :content %>
    <%= f.submit "もどる", name: 'back' %>
  <% end %>
  </div>
</div>